{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": false,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "declaration": false,
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "isolatedModules": true,
    "noResolve": false
  },
  "include": [
    "benchmark.ts",
    "config.ts",
    "reporter.ts",
    "runner.ts",
    "types.ts",
    "llm/*.ts",
    "server/*.ts",
    "tools/*.ts"
  ],
  "exclude": ["node_modules", "results", "../mesh"]
}
