{
  "name": "@decocms/mesh-monorepo",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "bun run --cwd=apps/mesh dev",
    "fmt": "biome format --write",
    "lint": "oxlint",
    "check": "bun run --workspaces --elide-lines=0 check",
    "check:ci": "bun run --workspaces check",
    "fmt:check": "biome format",
    "test": "bun test",
    "docs:dev": "cd docs && npm run dev",
    "docs:deploy": "cd docs && npm run deploy",
    "build:runtime": "bun run --filter=@decocms/runtime build",
    "ui": "npx shadcn@latest add -c ./packages/ui",
    "clean": "rm -f deno.lock package-lock.json bun.lock && rm -rf node_modules apps/*/node_modules packages/*/node_modules",
    "exorcise": "bun run clean && bun install --force",
    "knip": "knip"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "@biomejs/biome": "2.2.5",
    "@types/node": "^24.9.1",
    "knip": "^5.73.4",
    "oxlint": "1.23.0",
    "typescript": "^5.9.3",
    "react": "^19.2.0"
  },
  "overrides": {
    "zod-to-json-schema": "3.25.0"
  },
  "engines": {
    "node": ">=24.0.0"
  }
}
